<%- include('components/header', { title: '个人主页' }) %>
<script src="/scripts/local-api.js"></script>

<div x-data="profilePage">
  <%- include('components/header/nav-bar') %>

  <main class="max-w-screen-md mx-auto px-4 pt-20">
    <!-- 页面进度条 -->
    <div x-show="isLoadingRef" class="fixed top-0 left-0 right-0 z-50">
      <div class="progress progress-primary w-full h-1">
        <div class="progress-bar" style="width: 100%"></div>
      </div>
    </div>
    
    <!-- 用户信息 -->
    <div class="card bg-base-100 shadow-xl mb-8">
      <div class="card-body">
        <div class="flex items-center gap-4">
          <div class="avatar placeholder">
            <div class="bg-neutral text-neutral-content rounded-full w-16">
              <span class="text-xl" x-text="currentUser?.username?.charAt(0).toUpperCase()"></span>
            </div>
          </div>
          <div>
            <h2 class="card-title" x-text="currentUser?.username"></h2>
            <p class="text-base-content/70" x-text="currentUser?.email"></p>
          </div>
        </div>
      </div>
    </div>

    <!-- 灵感列表 -->
    <div class="tabs mb-4">
      <a class="tab tab-bordered tab-active"><%= t('post.myPosts') %></a>
    </div>

    <div class="space-y-4" x-show="!isLoadingRef">
      <template x-for="post in postsRef" :key="post?.id || Math.random()">
        <div class="card bg-base-100 shadow-xl" x-show="post">
          <div class="card-body">
            <p class="text-base-content/70" x-text="post?.content || ''"></p>
            <div class="card-actions justify-between items-center">
              <div class="flex items-center space-x-2 text-sm text-base-content/60">
                <span x-text="post?.createdAt ? new Date(post.createdAt).toLocaleDateString() : ''"></span>
              </div>
            </div>
          </div>
        </div>
      </template>
    </div>

    <!-- 加载状态 -->
    <div x-show="isLoadingRef" class="flex justify-center py-8">
      <span class="loading loading-dots loading-lg"></span>
    </div>

    <!-- 空状态 -->
    <div x-show="!isLoadingRef && postsRef.length === 0" class="text-center py-8 text-base-content/70">
      <%= t('post.empty') %>
    </div>
  </main>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('profilePage', () => ({
      currentUser: null,
      postsRef: [],
      isLoadingRef: true,

      async init() {
        this.isLoadingRef = true
        try {
          await this.loadCurrentUser()
          await this.onLoadPosts()
        } finally {
          this.isLoadingRef = false
        }
      },

      async loadCurrentUser() {
        try {
          // 从本地API获取当前用户
          const user = await LocalAPI.User.getCurrentUser()
          if (user) {
            this.currentUser = user
          } else {
            // 如果未登录，跳转到登录页
            window.location.href = '/login'
          }
        } catch (error) {
          console.error('获取用户信息失败:', error)
          window.$toast.error('获取用户信息失败')
        }
      },

      async onLoadPosts() {
        try {
          if (!this.currentUser) {
            this.isLoadingRef = false
            return
          }

          // 使用本地API获取当前用户的帖子
          const result = await LocalAPI.Post.getList({
            page: 1,
            limit: 20,
            authorId: this.currentUser.id
          })
          
          if (result.success) {
            this.postsRef = result.posts
          } else {
            window.$toast.error(result.error || '获取帖子列表失败')
          }
        } catch(error) {
          console.error('获取灵感列表失败:', error)
          window.$toast.error(error.message || '获取灵感列表失败')
        } finally {
          this.isLoadingRef = false
        }
      }
    }))
  })
</script>