<%- include('components/header', { title: '登录 - Natural Idyllic' }) %>

<div class="min-h-screen flex items-center justify-center">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title justify-center text-2xl font-bold mb-6">登录</h2>

      <form x-data="loginForm" @submit.prevent="onSubmit">
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">用户名或邮箱</span>
          </label>
          <input type="text" x-model="username" class="input input-bordered w-full" required />
        </div>

        <div class="form-control w-full mt-4">
          <label class="label">
            <span class="label-text">密码</span>
            <a href="/forgot-password" class="link link-primary text-sm hover:link-hover">忘记密码？</a>
          </label>
          <input type="password" x-model="password" class="input input-bordered w-full" required />
        </div>

        <div class="card-actions mt-6">
          <button type="submit" class="btn btn-primary w-full" :disabled="isSubmitting">
            <span x-show="isSubmitting" class="loading loading-spinner"></span>
            登录
          </button>
        </div>
      </form>

      <div class="divider">或者</div>

      <a href="/register" class="btn btn-outline w-full">
        创建新账号
      </a>
    </div>
  </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
  Alpine.data('loginForm', () => ({
    username: '',
    password: '',
    isSubmitting: false,

    async onSubmit() {
      this.isSubmitting = true
      try {
        // 使用本地API登录
        const result = await LocalAPI.User.login(this.username, this.password)
        
        if (result.success) {
          window.$toast.success('登录成功')
          // 登录成功,跳转到首页
          window.location.href = '/'
        } else {
          window.$toast.error(result.error || '登录失败')
        }
      } catch (error) {
        console.error('登录失败:', error)
        window.$toast.error(error.message || '登录失败')
      } finally {
        this.isSubmitting = false
      }
    }
  }))
})
</script>